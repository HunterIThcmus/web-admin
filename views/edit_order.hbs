<div class="card">
    <form class="form-horizontal" method="POST">
        <div class="card-body">
            <h4 class="card-title">Thông tin đơn hàng</h4>
            <div class="form-group row">
                <label for="id_order" class="col-sm-3 text-right control-label col-form-label">Mã đơn hàng</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="id_order" name="id_order" value="{{order._id}}" readonly>
                </div>
            </div>
            <div class="form-group row">
                <label for="username" class="col-sm-3 text-right control-label col-form-label">Tên khách hàng</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="username" name="username" value="{{order.name}}"
                        readonly>
                </div>
            </div>
            <div class="form-group row">
                <label for="date" class="col-sm-3 text-right control-label col-form-label">Ngày đặt hàng</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="date" name="date" value="{{order.date}}" readonly>
                </div>
            </div>
            <div class="form-group row">
                <label for="phone" class="col-sm-3 text-right control-label col-form-label">Số điện thoại</label>
                <div class="col-sm-9">
                    <input type="number" class="form-control" id="phone" name="phone" value="{{order.phone}}" required>
                </div>
            </div>
            <div class="form-group row">
                <label for="addr1" class="col-sm-3 text-right control-label col-form-label">Địa chỉ</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="addr1" name="addr1" value="{{order.add1}}" required>
                </div>
            </div>
            
            <div class="form-group row">
                <label for="stt" class="col-sm-3 text-right control-label col-form-label">Tình trạng đơn hàng</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="stt" name="stt" value="{{order.status}}">
                </div>
            </div>
        </div>
        <div class="border-top">
            <div class="card-body">
                <button type="submit" class="btn btn-primary">Lưu</button>
                <button type="button" class="btn btn-primary" onclick="location.href='/delete_order?id={{order._id}}'">Xóa</button>
            </div>
        </div>
    </form>
</div>