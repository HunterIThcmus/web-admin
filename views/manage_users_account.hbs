                        <td> {{#if user.sex}} name {{else}} Nữ {{/if}}</td>
                        <td>{{this.address}}</td>
                         
                        <td><button class="btn btn-primary" type="button" onclick="location.href='/edit_user_profile?q={{this._id}}'">Chỉnh sửa</button>
                            <button class="btn btn-primary" type="button">Xóa</button></td>
                        
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr>
