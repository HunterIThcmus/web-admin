<div class="card">
    <div class="card-body">
        <h5 class="card-title">Danh sách 10 sản phẩm bán chạy nhất</h5>
        <div class="table-responsive">
            <table id="zero_config" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Xếp hạng</th>
                        <th>Tên sản phẩm</th>
                        <th>Mã</th>
                        <th>Số lượng</th>
                        {{!-- <th>Doanh thu</th> --}}
                    </tr>
                </thead>
                <tbody>
                    {{#each value}}

                    <tr>
                        <td>{{inc @index}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this._id}}</td>
                        <td>{{this.sold}}</td>
                        {{!-- <td>4.550.000đ</td> --}}
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr>
                        <th>Xếp hạng</th>
                        <th>Tên sản phẩm</th>
                        <th>Mã</th>
                        <th>Số lượng</th>
                        {{!-- <th>Doanh thu</th> --}}
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>


